{% extends 'ClassCentralSiteBundle::base.html.twig' %}

 {% block headmeta %}
     <title>Class Central Sign Up</title>
     <meta name="description"
           content="Signup for a Class Central account and build your own searchable library of courses. MOOC Tracker is a service from Class Central that sends you email notifications based on your interests. Stay updated on courses that match your interests"/>
     <meta property="og:title" content="Signup for Class Central" />
     <meta property="og:url" content="https://www.class-central.com/signup" />
     <meta property="og:image" content="https://www.class-central.com/bundles/classcentralsite/slashpixel/images/ccprofilepic.png">
     <meta property="og:site_name" content="Class Central"/>
     <meta property="og:description" content="Signup for a Class Central account and build your own searchable library of courses. MOOC Tracker is a service from Class Central that sends you email notifications based on your interests. Stay updated on courses that match your interests" />
     <meta property="og:type" content="website" />
     <meta property="fb:admins" content="{{ fb_admins }}" />

     <!-- Twitter card integration -->
     <meta name="twitter:card" content="summary">
     <meta name="twitter:site" content="@classcentral">
     <meta name="twitter:title" content="Sign Up for Class Central">
     <meta name="twitter:description" content="Sign Up for a Class Central account and build your own searchable library of courses. MOOC Tracker is a service from Class Central that sends you email notifications based on your interests. Stay updated on courses that match your interests">
     <meta name="twitter:domain" content="www.class-central.com">

 {% endblock %}

